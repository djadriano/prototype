<!doctype html>
<head>
  <!-- metas -->
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta http-equiv="cleartype"       content="on">
  <meta name="description"           content="">
  <meta name="keywords"              content="">

  <meta name="viewport" content="width=device-width; initial-scale=1.0">

  <!-- icons -->
  <%= favicon_tag data.app.assets.favicon %>
  
  <!-- stylesheet -->
  <%= stylesheet_link_tag path_assets %>
  
  <!-- javascript: head -->
  <%= javascript_include_tag 'head' %>

  <!-- title -->
  <title><%= data.app.defaults.title %></title>
  
  <%= yield_content :assets %>
</head>

<!-- body
========================================================================================================= /// -->
<body class="<%= page_classes %>">

<!-- Header -->
<%= partial "shared/header" %>

<hr>
  
<!-- wrapper
========================================================================================================= /// -->
<div class="wrapper">
  <%= yield %>
</div>

<!-- javascripts
========================================================================================================= /// -->
<%= javascript_include_tag path_assets %>  
<script>PROTOTYPE.config = <%= data.app.to_json %>;</script>
</body>
